<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:opencv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <de.ur.juergenhahn.ba.Views.CustomCameraView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/previewCamera"
    />    
    
    <View
        android:id="@+id/botLeft"
        android:layout_marginLeft="15dp"
    	android:layout_width="100dp"
    	android:layout_height="2dp"
    	android:background="#8000EEFF"    
    	android:layout_alignParentLeft="true"
    	android:layout_alignParentBottom="true"
    	android:layout_marginBottom="20dp"
    />
    
    <View
        android:id="@+id/botRight"
        android:layout_marginRight="15dp"
    	android:layout_width="100dp"
    	android:layout_height="2dp"
    	android:background="#8000FFFF"    
    	android:layout_alignParentRight="true"
    	android:layout_alignParentBottom="true"
    	android:layout_marginBottom="20dp"
    />
    
    <View
        android:id="@+id/topLeft"
        android:layout_marginLeft="15dp"
    	android:layout_width="100dp"
    	android:layout_height="2dp"
    	android:background="#8000FFFF"    
    	android:layout_alignParentLeft="true"
    	android:layout_alignParentTop="true"
    	android:layout_marginTop="20dp"
    />
    
    <View
        android:id="@+id/topRight"
        android:layout_marginRight="15dp"
    	android:layout_width="100dp"
    	android:layout_height="2dp"
    	android:background="#8000FFFF"    
    	android:layout_alignParentRight="true"
    	android:layout_alignParentTop="true"
    	android:layout_marginTop="20dp"
    />
    
    <View
        android:id="@+id/topRightV"
        android:layout_marginRight="15dp"
    	android:layout_width="2dp"
    	android:layout_height="100dp"
    	android:background="#8000FFFF"    
    	android:layout_alignParentRight="true"
    	android:layout_alignParentTop="true"
    	android:layout_marginTop="20dp"
    />
    
    <View
        android:id="@+id/topLeftV"
        android:layout_marginLeft="15dp"
    	android:layout_width="2dp"
    	android:layout_height="100dp"
    	android:background="#8000FFFF"    
    	android:layout_alignParentLeft="true"
    	android:layout_alignParentTop="true"
    	android:layout_marginTop="20dp"
    />
    
    <View
        android:id="@+id/botRightV"
        android:layout_marginRight="15dp"
    	android:layout_width="2dp"
    	android:layout_height="100dp"
    	android:background="#8000FFFF"    
    	android:layout_alignParentRight="true"
    	android:layout_alignParentBottom="true"
    	android:layout_marginBottom="20dp"
    />
    
    <View
        android:id="@+id/botLeftV"
        android:layout_marginLeft="15dp"
    	android:layout_width="2dp"
    	android:layout_height="100dp"
    	android:background="#8000FFFF"    
    	android:layout_alignParentLeft="true"
    	android:layout_alignParentBottom="true"
    	android:layout_marginBottom="20dp"
    />
    
    <View
        android:id="@+id/indicatorLeft"
    	android:layout_width="2dp"
    	android:layout_height="85dp"
    	android:background="#8000FFFF"  
    	android:layout_marginLeft="205dp"
    	android:layout_centerVertical="true"
    />
    
    <View
        android:id="@+id/indicatorRight"
    	android:layout_width="2dp"
    	android:layout_height="85dp"
    	android:background="#8000FFFF"  
    	android:layout_marginLeft="150dp"
    	android:layout_centerVertical="true"
    	android:layout_toRightOf="@id/indicatorLeft"
    />
    
    <View
        android:id="@+id/indicatorTop"
    	android:layout_width="156dp"
    	android:layout_height="2dp"
    	android:background="#8000FFFF"  
    	android:layout_marginLeft="205dp"
    	android:layout_centerVertical="true"
    	android:layout_above="@id/indicatorLeft"
    />
    
    <View
        android:id="@+id/indicatorBottom"
    	android:layout_width="156dp"
    	android:layout_height="2dp"
    	android:background="#8000FFFF"  
    	android:layout_marginLeft="205dp"
    	android:layout_centerVertical="true"
    	android:layout_below="@id/indicatorLeft"
    />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/empty"
        android:textSize="22sp"  
        android:id="@+id/tvBRC"
        android:textColor="#00FFFF"
        android:layout_above="@id/botLeft"
        android:layout_toLeftOf="@id/botRightV"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
    />    
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="22sp"
        android:id="@+id/tvTLC"
        android:textColor="#00FFFF"
        android:layout_below="@id/topLeft"
        android:layout_toRightOf="@id/topLeftV"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
    />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:id="@+id/tvBLC"
        android:textColor="#00FFFF"
        android:layout_above="@id/botLeft"
        android:layout_toRightOf="@id/botLeftV"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
    />
    
    <ProgressBar 
        android:id="@+id/progressbar"
        style="?android:attr/progressBarStyleHorizontal" 
        android:progressDrawable="@drawable/custom_progressbar_horizontal"
        android:layout_width="175dp"
  		android:layout_height="wrap_content" 
  		android:padding="5dp"
  		android:layout_toLeftOf="@id/topRightV"
  		android:layout_below="@id/topRight"
    />
    
    <ProgressBar 
        android:id="@+id/progressbarSR"
        style="@style/Widget.ProgressBar.Vertical"
        android:layout_width="wrap_content"
  		android:layout_height="350dp" 
  		android:padding="10dp"
  		android:layout_toRightOf="@id/indicatorRight"
  		android:layout_below="@id/topRightV"
  		android:layout_above="@id/botRightV"
    />
    
    <ProgressBar 
        android:id="@+id/progressbarBattery"
        style="@style/Widget.ProgressBar.Vertical"
        android:layout_width="wrap_content"
  		android:layout_height="50dp" 
  		android:layout_above="@id/botRightV"
  		android:layout_marginRight="8dp"
  		android:layout_marginBottom="4dp"
  		android:layout_alignParentRight="true"
    />
    
    <TextView 
    	android:id="@+id/tvBattery"
    	android:layout_below="@id/topRightV"
    	android:layout_above="@id/progressbarBattery"
    	android:layout_marginRight="5dp"
    	android:layout_alignParentRight="true"
   		android:layout_width="wrap_content"
   		android:layout_height="wrap_content"
   		android:textSize="20sp"
   		android:textColor="#00FFFF"
   		android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
    />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mode"
        android:textSize="22sp"
        android:id="@+id/tvTRC"
        android:textColor="#00FFFF"
        android:layout_below="@id/progressbar"
        android:layout_toLeftOf="@id/topRightV"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
    />
</RelativeLayout>
