<?xml version="1.0" encoding="utf-8"?>    
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:id="@android:id/background">
    <shape>
      <gradient
                android:startColor="#77BBBBBB"
                android:centerColor="#77BBBBBB"
                android:centerY="0.75"
                android:endColor="#77BBBBBB"
                android:angle="180"
        />
    </shape>
  </item>

  <item android:id="@android:id/secondaryProgress">
    <clip android:clipOrientation="vertical" android:gravity="bottom">
      <shape>
        <gradient
                android:startColor="#77BBBBBB"
                android:centerColor="#77BBBBBB"
                android:centerY="0.75"
                android:endColor="#77BBBBBB"
                android:angle="180"
        />
      </shape>
    </clip>
  </item>

  <item android:id="@android:id/progress">
    <clip android:clipOrientation="vertical" android:gravity="bottom">
      <shape>
        <gradient
             android:startColor="#8800FFFF"
             android:centerColor="#8800FFFF"
             android:centerY="0.75"
             android:endColor="#8800FFFF"
             android:angle="180"
         />
      </shape>
    </clip>
</item>
</layer-list>
