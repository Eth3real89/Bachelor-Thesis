<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- Define the background properties like color etc -->
    <item android:id="@android:id/background">
    <shape>
        <gradient
                android:startColor="#77BBBBBB"
                android:centerColor="#77BBBBBB"
                android:centerY="1.0"
                android:endColor="#77BBBBBB"
                android:angle="270"
        />
    </shape>
   </item>

  <!-- Define the progress properties like start color, end color etc -->
  <item android:id="@android:id/progress">
    <clip>
        <shape>
            <gradient
                android:startColor="#8800FFFF"
                android:centerColor="#8800FFFF"
                android:centerY="1.0"
                android:endColor="#8800FFFF"
                android:angle="270"
            />
        </shape>
    </clip>
    </item>
</layer-list>
